<form action="/users/{{userData.id}}?_method=PUT" method="POST" enctype="multipart/form-data">
  <div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input class="form-control" type="text" name="name" id="name" placeholder="Enter name" value="{{userData.name}}">
  </div>
  <div class="form-row mb-3">
    <div><label class="form-label" for="image">Image</label></div>
    <input class="" type="file" class="" id="image" name="image">
  </div>
  {{#ifCond userData.id user.id}}
    <button type="submit" class="btn btn-primary">Submit</button>
  {{/ifCond}}
</form>
